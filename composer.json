{
    "name": "boshurik/petrovich-php",
    "description": "Fork of original petrovich/petrovich-php repository, with testing, modern PHP support and minor improvements",
    "license": "MIT",

    "keywords": [
        "petrovich",
        "declination",
        "inflection",
        "russian"
    ],

    "support": {
        "issues": "https://github.com/BoShurik/petrovich-php/issues",
        "source": "https://github.com/BoShurik/petrovich-php"
    },

    "require": {
        "php": "^7.2.9 | ^8.0",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "9.6",
        "squizlabs/php_codesniffer": "^3.7",
        "symfony/yaml": "^2.0 | ^3.0 | ^4.0 | ^5.0",
        "cloudloyalty/petrovich-rules": "dev-master@dev"
    },
    "suggest": {
        "symfony/yaml": "To load ruleset in yaml format"
    },
    "autoload": {
        "psr-4": {
            "BoShurik\\Petrovich\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BoShurik\\Petrovich\\Test\\": "test/"
        }
    },

    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "cs-check": "phpcs",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    },
    "scripts-descriptions": {
        "check": "Executes both code-style check and tests",
        "cs-check": "Executes code-style checks, based on 'phpcs.xml' ruleset",
        "test":  "Executes PHPUnit tests",
        "test-coverage": "Executes PHPUnit tests with coverage enabled. Used in deployment"
    }
}
